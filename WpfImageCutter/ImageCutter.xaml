<UserControl x:Name="MainControl" x:Class="WpfImageCutter.ImageCutter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfImageCutter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" SizeChanged="MainControl_SizeChanged" Loaded="MainControl_Loaded" MouseLeftButtonUp="MainControl_MouseLeftButtonUp" MouseLeave="MainControl_MouseLeave">
    <Grid x:Name="MainGrid" MouseMove="MainGrid_MouseMove" MouseLeftButtonUp="MainGrid_MouseLeftButtonUp">
        <Image x:Name="ControlImage"/>
        <Polygon x:Name="BackgroundDim" Fill="#7F494949"/>
        <Border x:Name="PreviewRect" BorderThickness="2" BorderBrush="White" HorizontalAlignment="Left" Width="800" Height="450" VerticalAlignment="Top" MouseLeftButtonDown="PreviewRect_MouseLeftButtonDown" MouseLeftButtonUp="PreviewRect_MouseLeftButtonUp" Background="#00000000" MouseLeave="PreviewRect_MouseLeave"/>
        <Rectangle x:Name="TopHandler" Fill="Black" Height="2" Stroke="Black" VerticalAlignment="Top" Margin="389,0,0,0" HorizontalAlignment="Left" Width="20" MouseLeftButtonDown="GrabHandler" MouseLeftButtonUp="ReleaseHandler" Cursor="SizeNS"/>
        <Rectangle x:Name="BottomHandler" Fill="Black" Height="2" Stroke="Black" VerticalAlignment="Top" Margin="389,448,0,0" HorizontalAlignment="Left" Width="20" MouseLeftButtonDown="GrabHandler" MouseLeftButtonUp="ReleaseHandler" Cursor="SizeNS"/>
        <Rectangle x:Name="LeftHandler" Fill="Black" Height="20" Stroke="Black" VerticalAlignment="Top" Margin="0,225,0,0" HorizontalAlignment="Left" Width="2" MouseLeftButtonDown="GrabHandler" MouseLeftButtonUp="ReleaseHandler" Cursor="SizeWE"/>
        <Rectangle x:Name="RightHandler" Fill="Black" Height="20" Stroke="Black" VerticalAlignment="Top" Margin="798,225,0,0" HorizontalAlignment="Left" Width="2" MouseLeftButtonDown="GrabHandler" MouseLeftButtonUp="ReleaseHandler" Cursor="SizeWE"/>
    </Grid>
</UserControl>
