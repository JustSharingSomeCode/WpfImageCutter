<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWindow"
        xmlns:WpfImageCutter="clr-namespace:WpfImageCutter;assembly=WpfImageCutter" x:Class="TestWindow.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FF383838">
        <WpfImageCutter:ImageCutter x:Name="Cutter" Height="300" VerticalAlignment="Top" Margin="10,10,200,0" BorderSize="5" HandlerLength="40" Background="#FF7E7E7E" SnapsToDevicePixels="True" MinPixelHeight="100" MinPixelWidth="100" MaxPixelWidth="2000" MaxPixelHeight="2000"/>
        <Button x:Name="LoadImageBtn" Content="Load Image" HorizontalAlignment="Left" Margin="10,389,0,0" VerticalAlignment="Top" Width="298" Click="LoadImageBtn_Click"/>
        <Button x:Name="CutImageBtn" Content="Cut Image" HorizontalAlignment="Left" Margin="313,389,0,0" VerticalAlignment="Top" Width="298" Click="CutImageBtn_Click"/>
        <Image x:Name="ImageResult" Height="166" Margin="0,10,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="166"/>
    </Grid>
</Window>
